<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.randomrestaurant">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_Login" >
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_home" >
        </activity>
        <activity
            android:name=".FavoritesListActivity"
            android:label="@string/title_favorites_list" >
        </activity>
        <activity
            android:name=".AddRestaurantActivity"
            android:label="@string/title_add_place" >
        </activity>
        <activity
            android:name=".TryNewRestaurantActivity"
            android:label="@string/title_try_new" >
        </activity>
        <activity
            android:name=".ResultsActivity"
            android:label="@string/title_random_results" >
        </activity>
    </application>

</manifest>